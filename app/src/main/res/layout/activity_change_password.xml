<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.locator_app.locator.view.profile.SettingsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/divider_bottom"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Altes Passwort"
                android:id="@+id/textView11"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left|center_vertical"
                android:textColor="#000000" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/divider_bottom"
            android:paddingLeft="20dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="30"
                android:id="@+id/oldPassword"
                android:layout_gravity="left|center_vertical"
                android:background="@android:color/transparent"
                android:hint="Altes passwort eingeben" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/divider_bottom"
            android:layout_gravity="center_horizontal">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/divider_bottom"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Neues Passwort"
                android:id="@+id/textView15"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left|center_vertical"
                android:textColor="#000000"
                android:paddingLeft="20dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/divider_bottom"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="30"
                android:id="@+id/newPassword1"
                android:background="@android:color/transparent"
                android:layout_gravity="left|center_vertical"
                android:hint="Neues Passwort eingeben" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/divider_bottom"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="30"
                android:id="@+id/newPassword2"
                android:background="@android:color/transparent"
                android:layout_gravity="left|center_vertical"
                android:hint="Passwort wiederholen" />
        </FrameLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/changePassword">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Passwort Ã¤ndern"
            android:id="@+id/textView13"
            android:layout_gravity="left|center_vertical"
            android:paddingLeft="20dp" />
    </FrameLayout>
</RelativeLayout>

